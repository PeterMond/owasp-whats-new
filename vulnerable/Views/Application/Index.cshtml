@{
    ViewData["Title"] = "Apply now!";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<form enctype="multipart/form-data" method="post" asp-controller="Application" asp-action="Index">
    <div class="form-group">
        <div class="col-md-10">
            <p>First name</p>
            <input type="text" name="firstName" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <p>Last name</p>
            <input type="text" name="lastName" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload at least one bank statement in XML format</p>
            <input type="file" name="bankFile" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>
